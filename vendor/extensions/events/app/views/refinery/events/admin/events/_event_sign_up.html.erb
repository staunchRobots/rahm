<div id="sign_up" class="tab-pane">
  <div class="row-fluid">
    <div class="span3">
      <div class="control-group">
        <h2>Confirmation email</h2>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <div class='control-group'>
        <%= f.label :email_subject, 'Subject' -%>
        <%= f.text_field :email_subject, :class => 'form-control' -%>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span10">
      <div class='control-group'>
        <%= f.label :email_body, 'Body' -%>
        <%= f.text_area :email_body, :rows => 10, :class => 'form-control' -%>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <div class='control-group'>
        <%= f.label :limit -%>
        <%= f.text_field :limit, :class => 'form-control', :type => 'number' -%>
      </div>
    </div>  
  </div>
</div>