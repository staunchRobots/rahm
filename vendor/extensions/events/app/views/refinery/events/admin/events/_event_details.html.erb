<div id="event_details" class="tab-pane active">
  <div class='control-group'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'controls' -%>
  </div>

  <div class='control-group'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description, :short_description],
                :object => "events/event" -%>
  </div>
  </br>
  
  <ul class="nav nav-tabs fix-nav">
    <li class="active"><a href="#poster" data-toggle="tab">Poster</a></li>
    <li><a href="#background_image" data-toggle="tab">Background</a></li>
  </ul>
  <div class="row-fluid">
    <div class="tab-content span12">
      <div id="poster" class="tab-pane fade in active">
        <div class='form-group'>
          <%= f.label :poster -%>
          <%= render '/refinery/admin/image_picker',
                     :f => f,
                     :field => :poster_id,
                     :image => @event.poster,
                     :toggle_image_display => false -%>
        </div>
      </div>
      <div id="background_image" class="tab-pane fade in">
        <div class='form-group'>
          <%= f.label :background_image -%>
          <%= render '/refinery/admin/image_picker',
                     :f => f,
                     :field => :background_image_id,
                     :image => @event.background_image,
                     :toggle_image_display => false -%>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 location">
      <h1>Custom Locations</h1>
      <div class='control-group'>
        <%= f.label :street_address -%>
        <%= f.text_field :street_address -%>
      </div>
      <div class='control-group'>
        <%= f.label :address_description -%>
        <%= f.text_field :address_description -%>
      </div>
      <div class='control-group'>
        <%= f.label :city -%>
        <%= f.text_field :city -%>
      </div>
      <div class="row-fluid">
        <div class='span6 control-group'>
          <%= f.label :zip -%>
          <%= f.text_field :zip -%>
        </div>
        <div class='span6 control-group'>
          <%= f.label :state -%>
          <%= f.text_field :state -%>
        </div>
      </div>
    </div>

    <div class="span6 map previewMap">
      <div class="control-group">
        <%= image_tag('', :id => "event_mappreview", :alt => "map preview", :width => 500, :height => 500)-%>
      </div>

      <%= f.hidden_field 'current_locations', :value => @current_locations %>
      <%= hidden_field_tag 'new_locations' %>
      <%= hidden_field_tag 'del_locations' %>
      <%= hidden_field_tag 'has_custom_name', @has_custom_name %>
    </div> 
  </div>

  <div class="row-fluid datetimepick">
    <h1>Date and Time</h1>
    <div class="datetimepickerDate control-group span3 input-append first">
      <%= f.label :date -%>
      <%= f.text_field :date, :class => 'date start', :data => {format: 'yyyy/MM/dd'} -%>
       <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
    <div class="datetimepickerTime control-group span3 input-append">
      <%= f.label :time_start -%>
      <%= f.text_field :time_start, :class => 'time start', :data => {format: 'hh:mm:ss'}-%>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
    <div class="datetimepickerDate control-group span3 input-append">
      <%= f.label :end_date -%>
      <%= f.text_field :end_date, :class => 'date end', :data => {format: 'yyyy/MM/dd'}-%>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
    <div class="datetimepickerTime control-group span3 input-append">
      <%= f.label :time_end -%>
      <%= f.text_field :time_end, :class => 'time end', :data => {format: 'hh:mm:ss'} -%>
      <span class="add-on">
        <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
      </span>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 organizer">
      <h1>Organizer</h1>
      <div class='control-group'>
        <%= f.label :telephone -%>
        <%= f.text_field :telephone -%>
      </div>
      <div class='control-group'>
        <%= f.label :email -%>
        <%= f.text_field :email -%>
      </div>
      <div class='control-group'>
        <%= f.label :organizer_name -%>
        <%= f.text_field :organizer_name -%>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <h1>Aditional Settings</h1>
    <% if @event.is_published.nil? or !@event.is_published %>
      <div class="first span12 datetimepick">
        <div class="datetimepickerDate first control-group span3 input-append">
          <%= f.label :publish_date -%>
          <%= f.text_field :publish_date, :data => {format: 'yyyy/MM/dd'}-%>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
          </span>
        </div>
        <div class="datetimepickerTime control-group span3 input-append">
          <%= f.label :publish_time -%>
          <%= f.text_field :publish_time, :data => {format: 'hh:mm:ss'} -%>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
          </span>
        </div>     
      </div>
    <% end %>
    <div class="first span2">
      <div class='control-group'>
        <%= f.label :has_signup -%>
        <%= f.check_box :has_signup, :checked => @event[:has_signup] -%>
      </div>
    </div>
    <% if !@event.id.nil? %>
      <div class="span2">
        <div class='control-group'>
          <%= f.label :invite_only -%>
          <%= f.check_box :invite_only, {class: 'no-change'} -%>
        </div>
        <%= hidden_field_tag 'event_url_hidden' , refinery.events_event_path(@event)%>      
      </div>
      <div class="span6">
        <div class="control-group">
          <%= label_tag 'event_url' -%>
          <%= text_field_tag 'event_url_text' , nil, {class: 'form-control', readonly: true} -%>
        </div> 
      </div>
    <% end %>
    <div class='span12 first control-group'>
      <%= f.label :event_category -%>
      <%= f.select(:event_category_id, @event_categories.collect {|d| [d.name, d.id] })%>
    </div>
  </div> 
</div>
