<div class="container">
  <%= form_for [refinery, :events_admin, @event] do |f| -%>
    <%= render '/refinery/admin/error_messages',
                :object => @event,
                :include_object_name => true %>

    <ul class="nav nav-tabs fix-nav">
      <li class="active"><a href="#event_details" data-target="#event_details" data-toggle="tab">Edit Event Details</a></li>
      <li><a href="#sign_up" data-target="#sign_up"  data-toggle="tab">Sign-Up Editor</a></li>
      <% if !@event.id.nil? -%>
      <li><a href="#attendees" data-target="#attendees" data-toggle="tab">Attendees</a></li>
      <% end -%>
    </ul>
    <div class="tab-content">
      <%= render 'event_details',   :f => f, :include_object_name => true %>
      <%= render 'event_sign_up',   :f => f, :include_object_name => true %>
      <%= render 'event_attendees', :f => f, :include_object_name => true %>
      <%= render 'event_javascript' %>
    </div>
    
    <%= render '/refinery/admin/form_actions', :f => f,
               :continue_editing => false,
               :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
               :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.title) -%>
  <% end -%>
  
</div>
