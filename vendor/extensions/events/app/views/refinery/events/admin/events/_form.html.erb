<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description, :short_description, :email_body],
                :object => "events/event" -%>
  </div>

  <div class='field'>
    <%= f.label :event_category_id -%>
    <%= f.number_field :event_category_id -%>
  </div>

  <div class='field'>
    <%= f.label :poster -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :poster_id,
               :image => @event.poster,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :background_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :background_image_id,
               :image => @event.background_image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :time_start -%>
    <%= f.time_select :time_start -%>
  </div>

  <div class='field'>
    <%= f.label :time_end -%>
    <%= f.time_select :time_end -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date -%>
  </div>

  <div class='field'>
    <%= f.label :end_date -%>
    <%= f.date_select :end_date -%>
  </div>

  <div class='field'>
    <%= f.label :street_address -%>
    <%= f.text_field :street_address -%>
  </div>

  <div class='field'>
    <%= f.label :address_description -%>
    <%= f.text_field :address_description -%>
  </div>

  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>

  <div class='field'>
    <%= f.label :telephone -%>
    <%= f.text_field :telephone -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :organizer_name -%>
    <%= f.text_field :organizer_name -%>
  </div>

  <div class='field'>
    <%= f.label :has_signup -%>
    <%= f.check_box :has_signup, :checked => @event[:has_signup] -%>
  </div>

  <div class='field'>
    <%= f.label :limit -%>
    <%= f.number_field :limit -%>
  </div>

  <div class='field'>
    <%= f.label :email_subject -%>
    <%= f.text_field :email_subject -%>
  </div>

  <div class='field'>
    <%= f.label :is_published -%>
    <%= f.check_box :is_published, :checked => @event[:is_published] -%>
  </div>

  <div class='field'>
    <%= f.label :publish_date -%>
    <%= f.date_select :publish_date -%>
  </div>

  <div class='field'>
    <%= f.label :publish_time -%>
    <%= f.time_select :publish_time -%>
  </div>

  <div class='field'>
    <%= f.label :invite_only -%>
    <%= f.check_box :invite_only, :checked => @event[:invite_only] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
