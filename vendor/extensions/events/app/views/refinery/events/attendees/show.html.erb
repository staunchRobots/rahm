<% content_for :body_content_title do %>
  <%= @attendee.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @attendee.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @attendee.last_name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @attendee.email %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="attendees">
      <% @attendees.each do |attendee| %>
        <li>
          <%= link_to attendee.first_name, refinery.events_attendee_path(attendee) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
